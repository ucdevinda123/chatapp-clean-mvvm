<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_friends_section"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/black"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvContactInitial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_friend_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/roboto_black"
        android:maxLines="3"
        android:text="ewewewewewewe"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="@id/cv_friends_section"
        app:layout_constraintStart_toEndOf="@+id/cv_friends_section"
        app:layout_constraintTop_toTopOf="@+id/cv_friends_section" />

    <TextView
        android:id="@+id/tv_friend_item_latest_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Hello Maan"
        android:textAlignment="textStart"
        android:textColor="@color/title_font_sub"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_friend_item_name"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_item_name" />


</androidx.constraintlayout.widget.ConstraintLayout>